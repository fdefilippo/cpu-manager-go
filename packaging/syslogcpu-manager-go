# Logrotate configuration for cpu-manager-go
/var/log/cpu-manager.log {
    missingok
    notifempty
    compress
    delaycompress
    copytruncate
    rotate 7
    daily
    create 0640 root adm
    postrotate
        # Ricarica rsyslog dopo la rotazione
        systemctl reload rsyslog 2>/dev/null || \
        /etc/init.d/rsyslog reload >/dev/null 2>&1 || true
    endscript
}
